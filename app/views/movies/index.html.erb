<h1>Movies</h1>

<p><%= link_to 'Add a New Movie', new_movie_url %></p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th>Votes</th>
      <th>Movie - id</th>
      <th>Users</th>
    </tr>
  </thead>

  <tbody>
  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.title %></td>
      <td><%= movie.year %></td>
      <td><%= movie.director.name %></td>
      <td><%= movie.votes.count %></td>
      <td><%= form_tag(votes_url, method: 'post')  %>
        <%= text_field_tag :movie_id, movie.id %></td>
       <td> <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :username) %>
         <td><%= submit_tag "Create Vote" %></td>
     </td>


      <td><%= link_to 'Show', movie_url(movie) %></td>
      <td><%= link_to 'Edit', edit_movie_url(movie) %></td>
      <td><%= link_to 'Destroy', movie_url(movie), method: 'delete', data: { confirm: "Do you really want to delete this movie?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

